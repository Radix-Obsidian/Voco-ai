{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Voco",
  "version": "2.0.0",
  "identifier": "com.voco.mcp-gateway",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080?demo=true",
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Voco â€” The Intent OS",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/rg"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://cdn.crabnebula.app/update/radix-obsidian/voco/{{target}}-{{arch}}/{{current_version}}"
